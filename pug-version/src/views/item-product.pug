if products_read.length != 0
    each val in products_read
        div(class="item p-0 col-6 col-md-4 col-lg-3 bg-body rounded")
            div(class="item-image")
                img(
                    class="rounded"
                    src=val.thumbnail
                    alt="product"
                )
            div(class="item-info p-3")
                div(class="item-info")
                    div(class="item-name")
                        h4
                           = val.title
                div(class="item-price-container mb-4")
                    span(class="fw-bold item-price")
                        = "$" + val.price
else 
    h4
        ="Aún no hay productos cargados."
    p
        ="Prueba cargar uno acá:"
        a(href="/agregar-producto")
            ="Agregar producto"  



